extends layout/main-layout
include mixins/footer-mixins


block content
    .row
        .col-lg-6
            h1.hidden-md-down Authentication
            h3.hidden-md-up Authentication
        .col-lg-2.hidden-md-down.pull-lg-right
            img.pull-lg-right.eu-brand(src="img/eu-logo.svg")

    .row
      .col-md-6.col-md-offset-3

        form(method='POST' action='/verification')
          div.form-group
            label(for='nationalIdentityNumber') National Identity Number:
            input#nationalIdentityNumber.form-control(type='text', name='nationalIdentityNumber' placeholder='123456789')
          button.btn.btn-primary(type='submit') Authenticate

    +footerBuildInfo

